<div class="container">

  <h1>餐廳後台</h1>

  <div class="row">

    <div class="col-md-12">


      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category</th>
            <th>Name</th>

          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>

          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td>[<%= restaurant.category.name %>]</td>
            <td><%= restaurant.name %></td>
    </tr>

    <td>
    <%= link_to 'Show', admin_restaurant_path(restaurant) %>  
      <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
     <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"} %>    </td>



          <% end %>

        </tbody>

      </table>

      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>

  </div>
</div>
